<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="PdfTitleRenamer.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="アプリについて"
        Height="700"
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20"
                Margin="0,0,0,10"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="📄 PDF Title to Filename"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Version 1.0.1"
                           FontSize="16"
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="PDFファイルのメタデータからタイトルを抽出し、ファイル名として自動設定するアプリケーションです"
                           FontSize="14"
                           Foreground="#374151"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="600"/>
            </StackPanel>
        </Border>

        <!-- Tab Control -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
            </Border.Effect>
            <TabControl Background="Transparent"
                        BorderThickness="0"
                        Margin="0">
                
                <!-- アプリについてタブ -->
                <TabItem Header="アプリについて" 
                         FontSize="14"
                         FontWeight="Medium">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            
                            <!-- アプリ情報 -->
                            <Border Background="#F8FAFC"
                                    Padding="20"
                                    Margin="0,0,0,20"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="#E2E8F0">
                                <StackPanel>
                                    <TextBlock Text="📱 アプリケーション情報"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#1E40AF"
                                               Margin="0,0,0,15"/>
                                    
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="バージョン:" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="1.0.1" Foreground="#6B7280"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="開発言語:" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="C# (.NET 8.0)" Foreground="#6B7280"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="UI フレームワーク:" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="WPF (Windows Presentation Foundation)" Foreground="#6B7280"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="デザイン:" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Material Design 風" Foreground="#6B7280"/>
                                        
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="対応OS:" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Windows 10/11 (x64)" Foreground="#6B7280"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- 機能説明 -->
                            <Border Background="#F8FAFC"
                                    Padding="20"
                                    Margin="0,0,0,20"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="#E2E8F0">
                                <StackPanel>
                                    <TextBlock Text="⚡ 主な機能"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#1E40AF"
                                               Margin="0,0,0,15"/>
                                    
                                    <StackPanel>
                                        <TextBlock Text="• PDFファイルのメタデータからタイトル情報を自動抽出"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="• 抽出したタイトルをファイル名として自動設定"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="• 複数ファイルの一括処理対応"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="• 処理状況のリアルタイム表示"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="• エラーハンドリングとログ機能"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="• ドラッグ&amp;ドロップ対応"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- 使用方法 -->
                            <Border Background="#F8FAFC"
                                    Padding="20"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="#E2E8F0">
                                <StackPanel>
                                    <TextBlock Text="📖 使用方法"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#1E40AF"
                                               Margin="0,0,0,15"/>
                                    
                                    <StackPanel>
                                        <TextBlock Text="1. 「ファイル選択」ボタンでPDFファイルを選択"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="2. または、PDFファイルをウィンドウにドラッグ&amp;ドロップ"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="3. 「処理開始」ボタンでファイル名の変更を実行"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="4. 処理状況と結果をログで確認"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
