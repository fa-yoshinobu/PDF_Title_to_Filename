<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="PdfTitleRenamer.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding AboutWindowTitle}"
        Height="700"
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20"
                Margin="0,0,0,10"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="📄 PDF Title to Filename"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="VersionTextBlock" Text="Version 1.0.4"
                           FontSize="16"
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="{Binding AppDescription}"
                           FontSize="14"
                           Foreground="#374151"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="600"/>
            </StackPanel>
        </Border>

        <!-- Tab Control -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
            </Border.Effect>
            <TabControl Background="Transparent"
                        BorderThickness="0"
                        Margin="0">
                
                <!-- アプリについてタブ -->
                <TabItem Header="{Binding AboutTab}" 
                         FontSize="14"
                         FontWeight="Medium">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            
                            <!-- アプリ情報 -->
                            <Border Background="#F8FAFC"
                                    Padding="20"
                                    Margin="0,0,0,20"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="#E2E8F0">
                                <StackPanel>
                                    <TextBlock Text="{Binding AppInfoHeader}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#1E40AF"
                                               Margin="0,0,0,15"/>
                                    
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding VersionLabel}" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock x:Name="VersionDetailTextBlock" Grid.Row="0" Grid.Column="1" Text="1.0.4" Foreground="#6B7280"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding AuthorLabel}" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding AuthorValue}" Foreground="#6B7280"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding LinkLabel}" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Foreground="#6B7280">
                                            <Hyperlink NavigateUri="https://github.com/fa-yoshinobu/PDF_Title_to_Filename" 
                                                       RequestNavigate="Hyperlink_RequestNavigate"
                                                       Foreground="#3B82F6">
                                                https://github.com/fa-yoshinobu/PDF_Title_to_Filename
                                            </Hyperlink>
                                        </TextBlock>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding DevelopmentLanguageLabel}" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DevelopmentLanguageValue}" Foreground="#6B7280"/>
                                        
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="{Binding UIFrameworkLabel}" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding UIFrameworkValue}" Foreground="#6B7280"/>
                                        
                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="{Binding DesignLabel}" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DesignValue}" Foreground="#6B7280"/>
                                        
                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="{Binding SupportedOSLabel}" FontWeight="Medium" Foreground="#374151"/>
                                        <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SupportedOSValue}" Foreground="#6B7280"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- 機能説明 -->
                            <Border Background="#F8FAFC"
                                    Padding="20"
                                    Margin="0,0,0,20"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="#E2E8F0">
                                <StackPanel>
                                    <TextBlock Text="{Binding MainFeaturesHeader}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#1E40AF"
                                               Margin="0,0,0,15"/>
                                    
                                    <StackPanel>
                                        <TextBlock Text="{Binding Feature1}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Feature2}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Feature3}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Feature4}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Feature5}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Feature6}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- 使用方法 -->
                            <Border Background="#F8FAFC"
                                    Padding="20"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="#E2E8F0">
                                <StackPanel>
                                    <TextBlock Text="{Binding UsageHeader}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#1E40AF"
                                               Margin="0,0,0,15"/>
                                    
                                    <StackPanel>
                                        <TextBlock Text="{Binding Usage1}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Usage2}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Usage3}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Usage4}"
                                                   FontSize="14"
                                                   Foreground="#374151"
                                                   Margin="0,0,0,8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- オープンソースライセンスタブ -->
                <TabItem Header="{Binding LicenseTab}" 
                         FontSize="14"
                         FontWeight="Medium">
