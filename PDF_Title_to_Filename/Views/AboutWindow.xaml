                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- System.Text.Encoding.CodePages -->
                            <Border Background="#F8FAFC"
                                    Padding="20"
                                    Margin="0,0,0,20"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="#E2E8F0">
                                <StackPanel>
                                    <TextBlock Text="System.Text.Encoding.CodePages"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#1E40AF"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Version: 8.0.0"
                                               FontSize="14"
                                               Foreground="#6B7280"
                                               Margin="0,0,0,5"/>
                                    <TextBlock FontSize="14"
                                               Foreground="#059669"
                                               FontWeight="Medium"
                                               Margin="0,0,0,15">
                                        <Run Text="{Binding LicenseLabel}"/>
                                        <Run Text=" MIT License"/>
                                    </TextBlock>
                                    <TextBlock TextWrapping="Wrap"
                                               FontSize="13"
                                               Foreground="#374151"
                                               LineHeight="18">
                                        <Run Text="Copyright (c) .NET Foundation and Contributors"/>
                                        <LineBreak/>
                                        <LineBreak/>
