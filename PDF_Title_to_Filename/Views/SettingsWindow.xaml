<Window x:Class="PdfTitleRenamer.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding SettingsWindowTitle}" Height="600" Width="700" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="ResetButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#9E9E9E"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- ファイル名要素の選択 -->
                <GroupBox Header="{Binding FileNameElementsHeader}" Style="{StaticResource GroupBoxStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 要素リスト -->
                        <ListView x:Name="ElementsListView"
                                  Grid.Row="0" 
                                  ItemsSource="{Binding Settings.Elements}"
                                  Height="200"
                                  Background="White"
                                  BorderThickness="1"
                                  BorderBrush="#CCCCCC">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- 有効/無効チェックボックス -->
                                        <CheckBox Grid.Column="0" 
                                                  IsChecked="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"
                                                  Checked="CheckBox_Changed"
                                                  Unchecked="CheckBox_Changed"/>
                                        
                                        <!-- 要素名 -->
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding DisplayName}" 
                                                   VerticalAlignment="Center"
                                                   FontSize="14"/>
                                        
                                        <!-- 上移動ボタン -->
                                        <Button Grid.Column="2" 
                                                Content="↑" 
                                                Width="30" 
                                                Height="25"
                                                Margin="5,0,2,0"
                                                Command="{Binding DataContext.MoveUpCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Background="#2196F3"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="12"/>
                                        
                                        <!-- 下移動ボタン -->
                                        <Button Grid.Column="3" 
                                                Content="↓" 
                                                Width="30" 
                                                Height="25"
                                                Margin="2,0,0,0"
                                                Command="{Binding DataContext.MoveDownCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Background="#2196F3"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="12"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <!-- 説明テキスト -->
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding ElementsDescription}"
                                   Foreground="#666666"
                                   FontSize="11"
                                   Margin="0,5,0,0"/>
                    </Grid>
                </GroupBox>

                <!-- カスタム文字列設定 -->
                <GroupBox Header="{Binding CustomStringSettingsHeader}" Style="{StaticResource GroupBoxStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="{Binding PrefixLabel}" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding Settings.CustomPrefix, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="{Binding PrefixToolTip}"
                                 TextChanged="TextBox_TextChanged"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="{Binding SuffixLabel}" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding Settings.CustomSuffix, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="{Binding SuffixToolTip}"
                                 TextChanged="TextBox_TextChanged"/>
                    </Grid>
                </GroupBox>

                <!-- セパレータ設定 -->
                <GroupBox Header="{Binding SeparatorSettingsHeader}" Style="{StaticResource GroupBoxStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0" Content="{Binding SeparatorLabel}" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Settings.Separator, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"
                                 ToolTip="{Binding SeparatorToolTip}"
                                 TextChanged="TextBox_TextChanged"/>
                    </Grid>
                </GroupBox>

                <!-- プレビュー -->
                <GroupBox Header="{Binding PreviewHeader}" Style="{StaticResource GroupBoxStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Content="{Binding PreviewLabel}" FontWeight="Bold"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding PreviewFileName}" 
                                 Style="{StaticResource TextBoxStyle}"
                                 IsReadOnly="True"
                                 Background="#F0F0F0"
                                 FontFamily="Consolas"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- ボタンエリア -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{Binding SaveButton}" 
                    Command="{Binding SaveCommand}" 
                    Style="{StaticResource SaveButtonStyle}"/>
            <Button Content="{Binding ResetButton}" 
                    Command="{Binding ResetCommand}" 
                    Style="{StaticResource ResetButtonStyle}"/>
            <Button Content="{Binding CancelButton}" 
                    Command="{Binding CancelCommand}" 
                    Style="{StaticResource CancelButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
